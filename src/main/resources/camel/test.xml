<?xml version="1.0" encoding="UTF-8"?>
<!-- camel-k: language=xml -->

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://camel.apache.org/schema/spring"
        xsi:schemaLocation="
            http://camel.apache.org/schema/spring
            https://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- Write your routes here, for example: -->
    <route id="xml">
        <from uri="timer:xml?repeatCount=1"/>

        <!-- <to uri="direct:call"/> -->

        <setBody>
            <simple>Hello Camel from ${routeId}</simple>
        </setBody>
        <log message="${body}"/>
    </route>


    <route id="binary">
        <from uri="platform-http:/binary"/>
        <log message="incoming BINARY payload"/>

        <marshal>
            <base64 lineLength="1"/>
        </marshal>

        <setBody>
            <simple>{ "image": "${body}"}</simple>
        </setBody>

        <!-- <log message="b64 payload: ${body}"/> -->
        <to uri="direct:call"/>
        <convertBodyTo type="String"/>
    </route>

<!--     <route id="dummy1">
        <from uri="platform-http:/test2"/>
        <log message="incoming:\n${body}"/>
    </route>
 -->
    <route id="test">
        <!-- <log message="incoming:\n${body}"/> -->


        <from uri="platform-http:/test"/>

        <log message="msg in"/>
        <to uri="direct:call"/>

        <setHeader name="Access-Control-Allow-Origin">
            <constant>*</constant>
        </setHeader>
        <setHeader name="Content-Type">
            <constant>text</constant>
        </setHeader>
        <setBody>
            <!-- <simple>Hello Camel from ${routeId}</simple> -->
            <simple>Hello from Camel</simple>
        </setBody>
        <log message="${body}"/>
    </route>



    <route id="call">
        <from uri="direct:call"/>
        <!-- <log message="incoming:\n${body}"/> -->

        <removeHeaders pattern="*"/>

<!--         <setHeader name="Content-Type">
            <constant>text</constant>
        </setHeader>
 -->

        <!-- <to uri="https://object-detection-rest-bmesegue-dev.apps.sandbox-m2.ll9k.p1.openshiftapps.com/predictions"/> -->
        <to uri="https://object-detection-rest:8080/predictions"/>



        <log message="${body}"/>

        <setBody>
            <jsonpath>$.detections[?(@.score>.8)].label</jsonpath>
        </setBody>

<!--         <marshal>
            <json/>
        </unmarshal>
 -->


<!--         <choice>
            <when>
                <simple>${body.length} > 0</simple>
                <log message="HIGH SCORE: detected: ${body}"/>
            </when>
            <otherwise>
                <log message="LOW SCORE: detected: ${body}"/>
            </otherwise>
        </choice> -->

        <log message="Detected: ${body}"/>

    </route>

    <route id="mqtt-consumer">
        <!-- <from uri="paho:detection"/> -->
        <from uri="paho:detection?brokerUrl=tcp://broker-amq-mqtt:1883"/>
        
        <!-- <log message="MQTT: ${body}"/> -->
        <log message="got MQTT image"/>


        <to uri="direct:call"/>

    </route>

</routes>
